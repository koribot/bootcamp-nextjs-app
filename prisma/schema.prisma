datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Projects {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  description String   @db.VarChar(2000)
  link        String
  repoLink    String
  imageLink   String
}

model Github {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  link      String
}

model Socials {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  description String
  link        String
}
