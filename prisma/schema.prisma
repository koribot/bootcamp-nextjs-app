generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Projects {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  description String   @db.VarChar(2000)
  imageLink   String
  link        String
  repoLink    String
}

model Github {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  link      String
}

model Socials {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  description String
  link        String
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}
